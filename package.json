{
  "name": "trackdev-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TrackDev Full-Stack Monorepo - Next.js Web App with Shared API Client",
  "scripts": {
    "dev:web": "pnpm --filter @trackdev/web dev",
    "dev:web:debug": "pnpm --filter @trackdev/web dev:debug",
    "build:web": "pnpm --filter @trackdev/web build",
    "build:packages": "pnpm --filter @trackdev/types build && pnpm --filter @trackdev/ui build && pnpm --filter @trackdev/api-client build",
    "build:all": "pnpm build:packages && pnpm build:web",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "prepare": "pnpm build:packages"
  },
  "keywords": [
    "trackdev",
    "monorepo",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.10",
      "@types/react-dom": "19.2.3"
    },
    "neverBuiltDependencies": [],
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "*",
        "@types/react": "*"
      }
    }
  }
}
